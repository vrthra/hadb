#!/bin/bash
_check_wal() {
  echo "WAL status in client"
  psql -c "select pg_last_xlog_receive_location()"
  ps -eaf | grep sender
}
_check_sql() {
  psql -c "SELECT * from fake_customers;"
}
_promote_to_master() {
  echo $(cat .masterip)/32 > slaves.info
  touch .trigger
  sleep 5
  psql -c "INSERT INTO fake_customers values ('\$(date)');" && echo "it worked."
}

